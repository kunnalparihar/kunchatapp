<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.kunal.kunchapp.Settingaccount">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingimage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/flowerss" />

    <TextView
        android:id="@+id/settings_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Kunal Parihar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/settings_displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_displayname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="welcome to our new app"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp" />

    <Button
        android:id="@+id/settings_image_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_displayText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="Change Profile picture"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/setting_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/settings_displayname"
        android:layout_below="@+id/settings_image_change"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="Change Status"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

</RelativeLayout>
